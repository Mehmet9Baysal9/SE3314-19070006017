<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="warning"/>
    <property name="fileExtensions" value="java"/>
    <property name="allowEmptyBlocks" value="false"/>
    <property name="warn" value="true"/>
    <property name="violationSeverity" value="warning"/>


    <module name="TypeName">
        <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        <property name="allowClasses" value="true"/>
        <property name="allowInterfaces" value="true"/>
        <property name="allowAbstractClasses" value="true"/>
    </module>

    <module name="MethodNaming">
        <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
    </module>

    <module name="LocalVariableName">
        <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
    </module>

    <module name="ConstantName">
        <property name="format" value="^[A-Z][A-Z0-9_]*$"/>
    </module>

    <module name="AbstractClassName">
        <property name="format" value="^.*Abstract$"/>
    </module>

    <module name="ClassDataAbstractionCoupling">
        <property name="maximalDataAbstractionCoupling" value="5"/>
    </module>

    <module name="ClassFanOutComplexity">
        <property name="max" value="10"/>
    </module>

    <module name="MethodCount">
        <property name="max" value="50"/>
    </module>

    <module name="Indentation">
        <property name="basicOffset" value="4"/>

    </module>

</module>
